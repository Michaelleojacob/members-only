extends layout

block content
  form(action="" method='post' class='sign-up-form')
    label(for="username") username
    input(type="text" class='sign-up-inputs' name='username')
    label(for="password") password
    input(type="text" class='sign-up-inputs' name='password')
    label(for="confirm-pass") confirm password
    input(type='text' class='sign-up-inputs' name='repassword')
    button(type="submit") sign up

  if errors
    ul
      each error in errors
        li!= error.msg
